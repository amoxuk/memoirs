@import 'lib/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 30px 30px 40px 30px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: center;
    line-height:1.5;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.weui-btn {
  color: rgba(0, 0, 0, 0.5);
  background-color: #ed6b9f !important;
}

.button-hover {
  color: rgba(0, 0, 0, 0.5);
  background-color: #ed6b9f !important;
}

button[type=primary] {
  color: #fff;
  background-color: #ed6b9f;
}
button {
  color: #fff;
  background-color: #ed6b9f;
}